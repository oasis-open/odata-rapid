{
  "name": "odata-rapid",
  "workspaces": [
    "tools/rsdl/rsdl-js",
    "tools/csdl-xml",
    "tools/odataUri",
    "tools/urlEditor",
    "tools/visualModelEditor",
    "tools/rsdlEditor",
    "tools/api-explorer",
    "tools/api-designer",
    "website"
  ],
  "scripts": {
    "clean": "npm run clean -w website && rimraf tools/*/.parcel-cache tools/*/dist tools/*/dist-dev tools/*/node_modules tools/rsdl/rsdl-js/node_modules .parcel-cache coverage node_modules",
    "build": "npm run build --workspaces --if-present",
    "postinstall": "patch-package && npm run clean-tools",
    "clean-tools": "rimraf tools/.parcel-cache tools/coverage tools/node_modules",
    "api-designer": "cd tools/api-designer && npm start",
    "api-explorer": "cd tools/api-explorer && npm start",
    "test": "c8 mocha",
    "start": "npm start -w website",
    "serve": "npm run serve -w website",
    "deploy": "npm run deploy -w website"
  },
  "devDependencies": {
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2"
  }
}
