{
  "name": "rapid-tools",
  "workspaces": [
    "csdl-xml",
    "odataUri",
    "urlEditor",
    "visualModelEditor",
    "rsdlEditor",
    "api-explorer",
    "api-designer"
  ],
  "scripts": {
    "clean": "rimraf */.parcel-cache */dist */dist-dev */node_modules .parcel-cache coverage node_modules ",
    "build": "npm run build --workspaces --if-present",
    "postinstall": "patch-package",
    "api-designer": "cd api-designer && npm start",
    "api-explorer": "cd api-explorer && npm start",
    "test": "c8 mocha -r ts-node/register */test/**/*.test.[jt]s"
  },
  "devDependencies": {
    "patch-package": "^6.4.7",
    "rimraf": "^3.0.2"
  }
}
