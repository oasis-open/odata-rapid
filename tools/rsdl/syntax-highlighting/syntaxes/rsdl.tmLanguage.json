{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "rsdl",
  "scopeName": "source.rsdl",
  "patterns": [
    {
      "include": "#rsdl"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#brace-declaration"
    }
  ],
  "repository": {
    "comment": "https://www.sublimetext.com/docs/3/scope_naming.html",
    "rsdl": {
      "patterns": [
        {
          "name": "storage.type",
          "match": "\\b(type|enum|service|namespace|include|as)\\b"
        },
        {
          "name": "storage.modifier",
          "match": "\\b(key|function|action)\\b"
        },
        {
          "name": "comment.line.double-slash.rsdl",
          "match": "//.*$\n?"
        },
        {
          "name": "string.regexp",
          "match": "@\\b([a-zA-Z]+)(\\.([a-zA-Z]+))*"
        },
        {
          "name": "support.type",
          "match": "\\b(Integer|String|Boolean|Double|DateTime|Decimal|Float)\\b"
        },
        {
          "name": "storage.type.edm",
          "match": "Edm\\.\\b([a-zA-z0-9]+)\\b"
        },
        {
          "name": "constant.language",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rsdl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.rsdl",
          "match": "\\\\."
        }
      ]
    },
    "brace-declarations": {
      "name": "declaration.braces.rsdl",
      "begin": "{",
      "end": "}",
      "beginCaptures": {
        "0": {
          "name": "punctuation.brace.open"
        }
      },
      "endCaptures": {
        "0": {
          "name": "punctuation.brace.close"
        }
      }
    }
  }
}
